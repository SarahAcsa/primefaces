	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a="http://www.ambientinformatica.com.br/jsf2"
	xmlns:p="http://primefaces.org/ui">
	<ui:define name="corpo">
		<Title>Listagem</Title>


		

			



			<p:layoutUnit position="center">
				<h:form>
					<p:growl id="messages" />

					<p:menubar>
						<p:submenu label="OpÃ§Ãµes" style="font-weight:bold">
							<p:submenu label="Meus agendamentos" >
								<p:menuitem value="Editar" url="#" />
								<p:menuitem value="Visualizar" url="#" />
							</p:submenu>
							<p:menuitem value="Perfil" url="#" />
							<p:separator />
							<p:menuitem value="Sair" url="#" />
						</p:submenu>

						<p:submenu label="Cadastro" >
							<p:menuitem value="Cadastrar Paciente"
								url="http://localhost:8080/primefaces/TelaCadPaciente.jsf" />
							
						</p:submenu>

						<p:submenu label="Help" >
							
							<p:submenu label="Search" >
								
							</p:submenu>
						</p:submenu>


						<f:facet name="options">

							<p:inputText id="txtPesquisa" style="margin:1px 10px 1px 1px;" placeholder="Search" value="#{PacienteControl.nome}"/>
